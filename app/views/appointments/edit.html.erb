<script type="text/javascript">
jQuery(document).ready(function($) {
    $('.toggle').on('click', function() { $('.container').stop().addClass('active'); });
    $('.close').on('click', function() { $('.container').stop().removeClass('active'); });
});
</script>
<div class="container pt-2">
    <div class="card"></div>
    <%= render template: 'appointments/show', :@appointment => @appointment %>
    <%= render 'form', appointment: @appointment %>
</div>